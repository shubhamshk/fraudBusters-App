# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/file-verification-app
# or for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/file-verification-app

# JWT Secret (use a long, random string)
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random

# JWT Token Expiration
JWT_EXPIRES_IN=7d

# Environment
NODE_ENV=development

# Server Port
PORT=5000

# Client Origin (for CORS in production)
CLIENT_ORIGIN=http://localhost:3000
